<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_rectangle_blank"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard.student.StudentProfileFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/profile_background"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:id="@+id/layoutImg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="175dp"
        android:id="@+id/imageCard"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="60dp"
        app:cardElevation="10dp"
        android:layout_height="120dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/profileImgCategory"
            android:src="@drawable/profile"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imageCard"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="205dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/userName"
        android:text="User"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:fontFamily="@font/roboto_regular"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sofia.william@gmail.com"
        android:id="@+id/user_email"
        app:layout_constraintTop_toBottomOf="@+id/layoutImg"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:drawableTint="#CD398247"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#5E5A5A"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="91-8567345986"
        android:id="@+id/user_phone"
        app:layout_constraintTop_toBottomOf="@+id/user_email"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:drawableTint="#CD2664E0"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#5E5A5A"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year of Study"
        android:id="@+id/user_year"
        app:layout_constraintTop_toBottomOf="@+id/user_phone"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="10dp"
        android:drawableTint="#CD398247"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#5E5A5A"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Address Details"
        android:id="@+id/user_address"
        app:layout_constraintTop_toBottomOf="@+id/user_year"
        android:layout_marginTop="25dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/addr"
        android:drawablePadding="10dp"
        android:drawableTint="#CD2664E0"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#5E5A5A"
        />

</androidx.constraintlayout.widget.ConstraintLayout>